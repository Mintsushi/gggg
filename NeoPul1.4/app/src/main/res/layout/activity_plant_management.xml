<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gardenimage"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/back" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:background="@drawable/sunflower_brown" />

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HP  "
                    android:textSize="20dp" />

                <ProgressBar
                    android:id="@+id/HPBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="149dp"
                    android:layout_height="15dp"
                    android:progressDrawable="@drawable/progressbar_custom" />

                <TextView
                    android:id="@+id/currentHP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/100"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXP"
                    android:textSize="20dp" />

                <ProgressBar
                    android:id="@+id/EXPBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="149dp"
                    android:layout_height="15dp"
                    android:progressDrawable="@drawable/progressbar_custom_exp" />

                <TextView
                    android:id="@+id/currentEXP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/100"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnMusic"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/music" />

            <Button
                android:id="@+id/btnTalk"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/talk" />

            <Button
                android:id="@+id/btnScissors"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/scissor" />

            <Button
                android:id="@+id/btnTouch"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/touch" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnWater"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/water" />

        <Button
            android:id="@+id/btnEnergy"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/energy" />

        <Button
            android:id="@+id/btnMedicine"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/medicine" />

        <Button
            android:id="@+id/ONOFF"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/on" />

    </LinearLayout>
</LinearLayout>
